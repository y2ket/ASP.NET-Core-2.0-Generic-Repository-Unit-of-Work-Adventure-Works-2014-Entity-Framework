@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EMS2.ViewModel;
@addTagHelper "*, EMS2"
@model List<PersonEmployee>
@*@model IndexJobTitle*@

@{
    ViewBag.Title = "Read";
}

<div>
    <div>        
        <table>
            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Job Title
                    </th>
                    <th>
                        Email address
                    </th>
                    <th>
                        Phone number
                    </th>
                    <th>
                        Birth date
                    </th>
                </tr>
            </thead>
            <tbody>                
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <p>@(i + 1)</p>
                            @*<p>@emp.JobTitleId</p>*@
                        </td>
                        <td>
                            <p>@Model[@i].LastName</p>
                            @*<p>@emp.JobTitle</p>*@
                        </td>
                        <td>
                            <p>@Model[@i].FirstName</p>
                        </td>
                        <td>
                            <p>@Model[@i].JobTitle</p>
                        </td>
                        <td>
                            <p>@Model[@i].EmailAddress</p>
                        </td>
                        <td>
                            <p>@Model[@i].PhoneNumber</p>
                        </td>
                        <td>
                            <p>@Model[@i].BirthDate</p>
                        </td>
                    </tr>  
                }
                
        </table>
        <div>
            @*<paging-job-title job-title-model="Model.JobTitlesViewModel_" page-action="Process"></paging-job-title>*@
        </div>
    </div>
</div>